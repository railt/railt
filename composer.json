{
    "name": "railt/railt",
    "type": "library",
    "description": "The Railt GraphQL Framework",
    "homepage": "https://railt.org",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/railt"
    },
    "repositories": [
        {"type": "path", "url": "libs/contracts/http"},
        {"type": "path", "url": "libs/contracts/http-factory"},
        {"type": "path", "url": "libs/contracts/http-middleware"},
        {"type": "path", "url": "libs/executors/webonyx"},
        {"type": "path", "url": "libs/extensions/router"},
        {"type": "path", "url": "libs/foundation"},
        {"type": "path", "url": "libs/http"},
        {"type": "path", "url": "libs/http-factory"},
        {"type": "path", "url": "libs/http-middleware"},
        {"type": "path", "url": "libs/sdl"},
        {"type": "path", "url": "libs/sdl-generator"},
        {"type": "path", "url": "libs/type-system"}
    ],
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "railt/sdl-generator": "^2.0",
        "railt/router-extension": "^2.0",
        "railt/webonyx-executor": "^2.0",
        "railt/foundation": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.27",
        "phpat/phpat": "^0.10",
        "phplrt/phplrt": "^3.2.7",
        "phpunit/phpunit": "^10.3",
        "rector/rector": "^0.15",
        "symfony/cache": "^5.4|^6.0",
        "symfony/console": "^5.4|^6.0",
        "symfony/var-dumper": "^5.4|^6.0",
        "symplify/monorepo-builder": "^11.2",
        "vimeo/psalm": "^5.15"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Contracts\\Http\\Tests\\": "libs/contracts/http/tests",
            "Railt\\Contracts\\Http\\Factory\\Tests\\": "libs/contracts/http-factory/tests",
            "Railt\\Contracts\\Http\\Middleware\\Tests\\": "libs/contracts/http-middleware/tests",
            "Railt\\Executor\\Webonyx\\Tests\\": "libs/executors/webonyx/tests",
            "Railt\\Extension\\Router\\Tests\\": "libs/extensions/router/tests",
            "Railt\\Foundation\\Tests\\": "libs/foundation/tests",
            "Railt\\Http\\Tests\\": "libs/http/tests",
            "Railt\\Http\\Factory\\Tests\\": "libs/http-factory/tests",
            "Railt\\Http\\Middleware\\Tests\\": "libs/http-middleware/tests",
            "Railt\\SDL\\Tests\\": "libs/sdl/tests",
            "Railt\\SDL\\Generator\\Tests\\": "libs/sdl-generator/tests",
            "Railt\\TypeSystem\\Tests\\": "libs/type-system/tests"
        }
    },
    "scripts": {
        "linter": "@linter:check",
        "linter:check": "psalm --no-cache",
        "linter:fix": "psalm --no-cache --alter",
        "phpcs": "@phpcs:check",
        "phpcs:check": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "rector": "@rector:check",
        "rector:check": "rector --config=rector.php --dry-run",
        "rector:fix": "rector --config=rector.php",
        "test": [
            "@test:unit",
            "@test:architecture"
        ],
        "test:unit": "phpunit --testdox",
        "test:architecture": [
            "phpstan clear-result-cache",
            "phpstan analyse -c phpstan.neon"
        ],
        "merge": "monorepo-builder merge"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev",
            "dev-main": "2.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
