{
    "name": "railt/railt",
    "type": "library",
    "description": "The Railt GraphQL Framework",
    "homepage": "https://railt.org",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/railt"
    },
    "repositories": [
        {
            "type": "path",
            "url": "libs/contracts/http",
            "package": {
                "name": "railt/http-contracts",
                "version": "2.0.0"
            }
        },
        {
            "type": "path",
            "url": "libs/contracts/http-factory",
            "package": {
                "name": "railt/http-factory-contracts",
                "version": "2.0.0"
            }
        },
        {
            "type": "path",
            "url": "libs/http",
            "package": {
                "name": "railt/http",
                "version": "2.0.0"
            }
        },
        {
            "type": "path",
            "url": "libs/http-emitter",
            "package": {
                "name": "railt/http-emitter",
                "version": "2.0.0"
            }
        },
        {
            "type": "path",
            "url": "libs/http-factory",
            "package": {
                "name": "railt/http-factory",
                "version": "2.0.0"
            }
        },
        {
            "type": "path",
            "url": "libs/sdl",
            "package": {
                "name": "railt/sdl",
                "version": "2.0.0"
            }
        },
        {
            "type": "path",
            "url": "libs/type-system",
            "package": {
                "name": "railt/type-system",
                "version": "2.0.0"
            }
        },
        {
            "type": "path",
            "url": "libs/type-system-webonyx",
            "package": {
                "name": "railt/type-system-webonyx",
                "version": "2.0.0"
            }
        }
    ],
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.1",
        "railt/http": "^2.0",
        "railt/http-emitter": "^2.0",
        "railt/http-factory": "^2.0",
        "railt/sdl": "^2.0",
        "railt/type-system": "^2.0",
        "railt/type-system-webonyx": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.22",
        "httpsoft/http-server-request": "^1.1",
        "phplrt/phplrt": "^3.2",
        "phpunit/phpunit": "^10.2",
        "symfony/cache": "^5.4|^6.0",
        "symfony/console": "^5.4|^6.0",
        "symfony/http-foundation": "^5.4|^6.0",
        "symfony/var-dumper": "^5.4|^6.0",
        "vimeo/psalm": "^5.13"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Contracts\\Http\\Tests\\": "libs/contracts/http/tests",
            "Railt\\Contracts\\Http\\Factory\\Tests\\": "libs/contracts/http-factory/tests",
            "Railt\\Http\\Tests\\": "libs/http/tests",
            "Railt\\Http\\Emitter\\Tests\\": "libs/http-emitter/tests",
            "Railt\\Http\\Factory\\Tests\\": "libs/http-factory/tests",
            "Railt\\SDL\\Tests\\": "libs/sdl/tests",
            "Railt\\TypeSystem\\Tests\\": "libs/type-system/tests",
            "Railt\\TypeSystem\\Webonyx\\Tests\\": "libs/type-system-webonyx/tests"
        }
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpunit",
            "@psalm"
        ],
        "psalm": "psalm --no-cache",
        "psalm:fix": "psalm --alter --no-cache",
        "phpcs": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "phpunit": "phpunit --testdox"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev",
            "dev-main": "2.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
