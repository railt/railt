{
    "name": "railt/railt",
    "type": "library",
    "description": "The Railt GraphQL Framework",
    "homepage": "https://railt.org",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/railt"
    },
    "repositories": [
        {"type": "path", "url": "libs/sdl"},
        {"type": "path", "url": "libs/type-system"},
        {"type": "path", "url": "libs/type-system-webonyx-bridge"}
    ],
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.2",
        "railt/sdl": "^2.0",
        "railt/type-system": "^2.0",
        "railt/type-system-webonyx-bridge": "^2.0"
    },
    "require-dev": {
        "graphql/type-system-contracts": "^15.5",
        "friendsofphp/php-cs-fixer": "^3.21",
        "phplrt/phplrt": "^3.2",
        "symfony/console": "^5.4|^6.0",
        "symfony/var-dumper": "^5.4|^6.0",
        "phpunit/phpunit": "^10.2",
        "vimeo/psalm": "^5.13"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\SDL\\Tests\\": "libs/sdl/tests",
            "Railt\\TypeSystem\\Tests\\": "libs/type-system/tests",
            "Railt\\TypeSystem\\Bridge\\Webonyx\\": "libs/type-system-webonyx-bridge/tests"
        }
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpunit",
            "@psalm"
        ],
        "psalm": "psalm --no-cache",
        "psalm:fix": "psalm --alter --issues=all --no-cache",
        "phpcs": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "phpunit": "phpunit --testdox"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev",
            "dev-main": "2.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
