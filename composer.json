{
    "name": "railt/railt",
    "type": "library",
    "description": "The Railt Framework",
    "license": "MIT",
    "keywords": [
        "graphql",
        "sdl",
        "ast",
        "framework",
        "reflection",
        "railt",
        "application"
    ],
    "homepage": "http://railt.org",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/railt"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "bin": [
        "bin/railt"
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-spl": "*",
        "ext-pcre": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/cache": "~1.0",
        "psr/container": "~1.0",
        "psr/simple-cache": "~1.0",
        "nesbot/carbon": "~1.0|~2.0",
        "cache/array-adapter": "~1.0",
        "symfony/polyfill": "~1.10",
        "illuminate/support": "~5.5",
        "webonyx/graphql-php": "~0.13",
        "symfony/console": "~3.4|~4.0",
        "symfony/event-dispatcher": "~3.4|~4.0",
        "railt/discovery": "1.4.*|1.4.x-dev"
    },
    "replace": {
        "railt/container": "*",
        "railt/dumper": "*",
        "railt/http": "*",
        "railt/io": "*",
        "railt/json": "*",
        "railt/lexer": "*",
        "railt/parser": "*",
        "railt/sdl": "*"
    },
    "autoload": {
        "psr-4": {
            "Railt\\": "src/"
        },
        "files": [
            "./src/Component/Dumper/helpers.php",
            "./src/Component/SDL/polyfill.php",
            "./src/Component/Json/helpers.php",
            "./src/Component/Json/polyfill.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "brianium/paratest": "^2.1",
        "railt/compiler": "1.4.*|1.4.x-dev",
        "symfony/dependency-injection": "~3.4|~4.0",
        "symfony/var-dumper": "~3.4|~4.0",
        "symfony/finder": "~3.4|~4.0",
        "cache/filesystem-adapter": "~1.0",
        "illuminate/container": "~5.5",
        "monolog/monolog": "~1.9",
        "justinrainbow/json-schema": "~5.2"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "monolog/monolog": "(1.*) PSR-3 Logger Implementation"
    },
    "scripts": {
        "post-autoload-dump": [
            "Railt\\Discovery\\Manifest::discover"
        ]
    },
    "extra": {
        "discovery": {
            "railt": {
                "schema": "${package.dir}/resources/railt.schema.json5"
            }
        },
        "railt": {
            "preload": {
                "extensions": [
                    "graphqls",
                    "graphql"
                ]
            },
            "autoload": {
                "extensions": [
                    "graphqls",
                    "graphql"
                ],
                "paths": [
                    "${package.dir}/src/Extension/Routing/Resources/graphql",
                    "${package.dir}/src/Extension/ClassLoader/Resources/graphql"
                ]
            },
            "commands": [
                "Railt\\Component\\Json\\Console\\Json5CompileCommand",
                "Railt\\Component\\SDL\\Console\\SDLGrammarCompileCommand",
                "Railt\\Foundation\\Console\\ExtensionsListCommand"
            ],
            "extensions": [
                "Railt\\Extension\\Debug\\DebugExtension",
                "Railt\\Extension\\ClassLoader\\ClassLoaderExtension",
                "Railt\\Extension\\Routing\\RouterExtension",
                "Railt\\Extension\\Normalization\\NormalizationExtension"
            ]
        },
        "branch-alias": {
            "1.3.x": "1.3.x-dev",
            "1.4.x": "1.4.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
