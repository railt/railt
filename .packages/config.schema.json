{
    "$id": "https://railt.org/split.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A representation of a components merging and splitting",
    "type": "object",
    "required": [
        "packages"
    ],
    "properties": {
        "files": {
            "type": "object",
            "description": "A global list of files which should be sync in {\"local-file\": \"external-file\"} format"
        },
        "dirs": {
            "type": "object",
            "description": "A global list of directories which should be sync in {\"local-dir\": \"external-dir\"} format"
        },
        "packages": {
            "type": "object",
            "description": "A list of components",
            "propertyNames": {
                "pattern": "^\\w+/\\w+$"
            },
            "patternProperties": {
                "^\\w+/\\w+$": {
                    "type": "object",
                    "required": [
                        "remote"
                    ]
                },
                "remote": {
                    "type": "string",
                    "description": "GIT remote reference"
                },
                "files": {
                    "type": "object",
                    "description": "A list of files which should be sync in {\"local-file\": \"external-file\"} format"
                },
                "dirs": {
                    "type": "object",
                    "description": "A list of directories which should be sync in {\"local-dir\": \"external-dir\"} format"
                }
            }
        }
    }
}
