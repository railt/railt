{
    "name": "railt/sdl",
    "type": "library",
    "license": "MIT",
    "keywords": ["graphql", "language", "sdl", "parser", "schema"],
    "homepage": "https://github.com/railt",
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/sdl"
    },
    "require": {
        "php": "^8.1",
        "psr/simple-cache": "^1.0|^2.0|^3.0",
        "psr/log": "^1.0|^2.0|^3.0",
        "phplrt/runtime": "^3.2.7",
        "railt/type-system": "^2.0",
        "voku/portable-utf8": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Railt\\SDL\\": "src"
        }
    },
    "require-dev": {
        "sebastian/environment": "^5.1|^6.0",
        "phplrt/phplrt": "^3.2.7",
        "symfony/console": "^5.4|^6.0",
        "phpunit/phpunit": "^10.3",
        "vimeo/psalm": "^5.15"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\SDL\\Tests\\": "tests"
        }
    },
    "suggest": {
        "sebastian/environment": "(^5.1|^6.0) For console highlighting detection in exceptions",
        "phplrt/compiler": "(^3.2) For grammar compilation support",
        "symfony/console": "(^5.4|^6.0) For console commands support"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev",
            "dev-main": "2.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
